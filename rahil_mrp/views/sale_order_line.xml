<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="rahil_sale_order_line_view_tree" model="ir.ui.view">
            <field name="name">rahil.sale.order.line.tree</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="order_id" optional="hide"/>
                    <field name="order_partner_id" optional="hide"/>
                    <field name="categ_id" optional="show"/>
                    <field name="micron" optional="show"/>
                    <field name="size" optional="show"/>
                    <field name="product_id" optional="show"/>
                    <field name="product_uom_qty" sum="Total Order Qty" optional="show"/>
                    <field name="mrp_qty" optional="show"/>
                    <field name="clarity" optional="show"/>
                    <field name="optical_density" optional="show"/>
                    <field name="line_sit" optional="show"/>
                    <field name="high_bond" optional="show"/>
                    <field name="line_remark" optional="show"/>
                    <field name="line_planing_state" optional="hide"/>
                    <field name="product_core" optional="show"/>
                    <field name="sale_ct" optional="show"/>
                    <field name="sale_cof" optional="show"/>
                    <field name="roll_od" optional="show"/>
                </tree>
            </field>
        </record>


    </data>
</odoo>